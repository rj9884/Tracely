{
  "manifest_version": 3,
  "name": "Tracely",
  "version": "0.1.0",
  "description": "See what websites actually learn about you â€” in real time",
  "icons": {
    "16": "images/icon-16.svg",
    "48": "images/icon-48.svg",
    "128": "images/icon-128.svg"
  },
  "permissions": [
    "storage",
    "webRequest",
    "tabs",
    "scripting"
  ],
  "host_permissions": [
    "<all_urls>"
  ],
  "action": {
    "default_popup": "src/popup/popup.html",
    "default_title": "Tracely"
  },
  "background": {
    "service_worker": "src/background/service-worker.js"
  },
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["src/content/content.js"],
      "run_at": "document_start",
      "all_frames": true
    },
    {
      "matches": ["https://tracely-frontend.vercel.app/*"],
      "js": ["src/content/token-sync.js"],
      "run_at": "document_start"
    }
  ],
  "web_accessible_resources": [
    {
      "resources": ["src/utils/tracker-detection.js"],
      "matches": ["<all_urls>"]
    }
  ]
}
